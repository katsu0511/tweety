.inner.profile
  %h1.account_name= user.account_name
  - if user == current_user
    = link_to '編集', edit_profile_path, class: 'profile_edit'
  - else
    - if current_user&.has_followed?(user)
      %p.profile_edit.follow_btn フォロー済み
    - else
      = link_to 'フォロー', account_follows_path(user), data: {method: 'post'}, class: 'profile_edit follow_btn'
  .profile_image
    = image_tag user.icon_image, class: 'profile_icon'
  %h2.user_name= user.profile&.name
  %p.user_introduction= user.profile&.introduction
  - if user.profile&.birthday
    %p.user_birthday
      %span 誕生日
      = user.profile&.birthday
  .profile_infos
    .profile_info.post
      %span= user.tweets.count
      %h2 ツイート
    = link_to root_path, class: 'profile_info follower' do
      %span 15
      %h2 フォロワー
    = link_to root_path, class: 'profile_info following' do
      %span 15
      %h2 フォロー
  .tweets_index
    = render 'commons/tweets', user: @user
= link_to '+',new_tweet_path, class: 'new_tweet'
